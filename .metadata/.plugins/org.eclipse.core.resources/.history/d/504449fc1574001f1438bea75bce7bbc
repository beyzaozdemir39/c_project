//kütüphane yönetim sistemi

#include <stdio.h>
#include <stdlib.h>

struct library{
	char book_name[20];
	char author[20];
	int pages;
	float price;
};

int main() {

	struct library lib[100];
	int input=0;

	while(input != 5){
