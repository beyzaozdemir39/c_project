			printf("5. Cikis \n");


			printf("\nLutfen seciminizi yapiniz ");
			scanf("%d", &input);


			switch(input){
			case 1:
				printf("Kitabın adını giriniz : ");
				scanf("%s",&lib[i].book_name);
				printf("Kitabın yazarini giriniz :");
				scanf("%s",&lib[i].author);
				printf("Kitabın sayfa sayisini giriniz :");
				scanf("%d",&lib[i].pages);
				printf("Kitabin adini giriniz :");
				scanf("%f",&lib[i].price);
				i++;

				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				printf("\n Toplam Kitap Sayisi: %d",i;)
				break;
